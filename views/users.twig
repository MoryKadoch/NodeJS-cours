{% extends 'layout.twig' %}

{% block body %}
	<h1>{{title}}</h1>
	<table class="table table-striped table-dark">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Id</th>
				<th scope="col">Firstname</th>
				<th scope="col">Lastname</th>
				<th scope="col">Age</th>
				<th scope="col">Action</th>
			</tr>
		</thead>
		<tbody>
    {% for key, user in users %}
			<tr>
				<th scope="row">{{ key }}</th>
				<td>{{ user.id }}</td>
				<td>{{ user.firstname }}</td>
				<td>{{ user.lastname }}</td>
				<td>{{ user.age }}</td>
				<td><a href="/user/{{ user.id }}">Show</a></td>
			</tr>
    {% endfor %}
		</tbody>
	</table>
{% endblock %}
