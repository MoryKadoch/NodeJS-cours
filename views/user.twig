{% extends 'layout.twig' %}

{% block body %}
	<h1>{{title}}</h1>
	<table class="table table-striped table-dark">
		<thead>
			<tr>
				<th scope="col">Id</th>
				<th scope="col">Firstname</th>
				<th scope="col">Lastname</th>
				<th scope="col">Age</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>{{ user.id }}</td>
				<td>{{ user.firstname }}</td>
				<td>{{ user.lastname }}</td>
				<td>{{ user.age }}</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
